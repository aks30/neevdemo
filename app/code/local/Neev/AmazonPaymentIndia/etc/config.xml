<config>
    <modules>
        <Neev_AmazonPaymentIndia>
            <version>1.6.1</version>
        </Neev_AmazonPaymentIndia>
    </modules>
    <global>
        <blocks>
            <amazonpaymentindia>
                <class>Neev_AmazonPaymentIndia_Block</class>
            </amazonpaymentindia>
            <page>
                <rewrite>
                    <html_head>Neev_AmazonPaymentIndia_Block_Page_Html_Head</html_head>
                </rewrite>
            </page>
        </blocks>
        <models>
            <amazonpaymentindia>
                <class>Neev_AmazonPaymentIndia_Model</class>
                <resourceModel>amazonpaymentindia_mysql4</resourceModel>
            </amazonpaymentindia>
            <amazonpaymentindia_mysql4>
                <class>Neev_AmazonPaymentIndia_Model_Mysql4</class>
                <entities>
                    <log_exception>
                        <table>amazon_log_exception</table>
                    </log_exception>
                    <log_exception_order>
                        <table>amazon_log_exception_order</table>
                    </log_exception_order>
                    <log_feed>
                        <table>amazon_log_feed</table>
                    </log_feed>
                    <log_feed_order>
                        <table>amazon_log_feed_order</table>
                    </log_feed_order>
                    <log_iopn>
                        <table>amazon_log_iopn</table>
                    </log_iopn>
                    <log_iopn_order>
                        <table>amazon_log_iopn_order</table>
                    </log_iopn_order>
                    <log_report>
                        <table>amazon_log_report</table>
                    </log_report>
                    <log_report_order>
                        <table>amazon_log_report_order</table>
                    </log_report_order>
                    <log_api>
                        <table>amazon_log_api</table>
                    </log_api>
                    <log_api_order>
                        <table>amazon_log_api_order</table>
                    </log_api_order>
                </entities>
            </amazonpaymentindia_mysql4>
        </models>
        <helpers>
            <amazonpaymentindia>
                <class>Neev_AmazonPaymentIndia_Helper</class>
            </amazonpaymentindia>
        </helpers>
        <resources>
            <amazonpaymentindia_setup>
                <setup>
                    <module>Neev_AmazonPaymentIndia</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </amazonpaymentindia_setup>
            <amazonpaymentindia_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </amazonpaymentindia_write>
            <amazonpaymentindia_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </amazonpaymentindia_read>
        </resources>
        <events>
            <amazon_api_post_call>
                <observers>
                    <amazon_payments_logger>
                        <type>singleton</type>
                        <class>Neev_AmazonPaymentIndia_Model_Observer</class>
                        <method>logApiCall</method>
                    </amazon_payments_logger>
                </observers>
            </amazon_api_post_call>
            <amazon_api_file_call>
                <observers>
                    <amazon_payments_logger>
                        <type>singleton</type>
                        <class>Neev_AmazonPaymentIndia_Model_Observer</class>
                        <method>logApiCall</method>
                    </amazon_payments_logger>
                </observers>
            </amazon_api_file_call>
            <sales_order_payment_cancel>
                <observers>
                    <amazon_payments_observer>
                        <type>singleton</type>
                        <class>Neev_AmazonPaymentIndia_Model_Observer</class>
                        <method>cancelOrderInAmazon</method>
                    </amazon_payments_observer>
                </observers>
            </sales_order_payment_cancel>
            <sales_order_save_after>
                <observers>
                    <amazon_payments_observer>
                        <type>singleton</type>
                        <class>Neev_AmazonPaymentIndia_Model_Observer</class>
                        <method>confirmShipmentToAmazon</method>
                    </amazon_payments_observer>
                </observers>
            </sales_order_save_after>
        </events>
        <sales>
            <order>
                <statuses>
                    <pending_amazon translate="label">
                        <label>Pending Amazon</label>
                    </pending_amazon>
                </statuses>
            </order>
        </sales>
        <payment>
            <groups>
                <amazonpayments>Amazon Payments</amazonpayments>
            </groups>
        </payment>
        <neev>
            <amazonpaymentindia>
                <api>
                    <checkout>
                        <version>2010-08-31</version>
                        <xmlns>http://payments.amazon.com/checkout/v2/2010-08-31/</xmlns>
                        <endpoint_url>
                            <hi_IN>
                                <live>https://payments.amazon.in/cba/api/purchasecontract/</live>
                                <sandbox>https://payments-sandbox.amazon.in/cba/api/purchasecontract/</sandbox>
                            </hi_IN>
                        </endpoint_url>
                    </checkout>
                    <marketplace>
                        <ids>
                            <hi_IN>AXGTNDD750VEM</hi_IN>
                        </ids>
                        <feeds>
                            <version>2009-01-01</version>
                            <xmlns>http://mws.amazonaws.com/doc/2009-01-01/</xmlns>
                            <endpoint_url>
                                <hi_IN>https://mws.amazonservices.in/</hi_IN>
                            </endpoint_url>
                        </feeds>
                        <orders>
                            <version>2011-01-01</version>
                            <xmlns>https://mws.amazonservices.com/Orders/2011-01-01</xmlns>
                            <endpoint_url>
                                <hi_IN>https://mws.amazonservices.in/Orders/2011-01-01</hi_IN>
                            </endpoint_url>
                        </orders>
                        <reports>
                            <version>2009-01-01</version>
                            <xmlns>http://mws.amazonaws.com/doc/2009-01-01/</xmlns>
                            <endpoint_url>
                               <hi_IN>https://mws.amazonservices.in/</hi_IN>
                            </endpoint_url>
                        </reports>
                    </marketplace>
                    <iopn>
                        <version>2008-11-30</version>
                        <xmlns>http://payments.amazon.com/checkout/2008-11-30/</xmlns>
                        <schema_path><![CDATA[app/code/<codePool>/Neev/AmazonPaymentIndia/schema/iopn.xsd]]></schema_path>
                    </iopn>
                </api>
                <debug>
                    <events>
                        <payment_method_is_active/>
                        <checkout_controller_onepage_save_shipping_method/>
                        <checkout_onepage_controller_success_action/>
                        <sales_order_payment_cancel/>
                        <sales_order_save_after/>
                        <controller_front_init_before/>
                    </events>
                </debug>
            </amazonpaymentindia>
        </neev>
    </global>
    <frontend>
        <layout>
            <updates>
                <amazonpaymentindia>
                    <file>amazonpaymentindia.xml</file>
                </amazonpaymentindia>
            </updates>
        </layout>
        <routers>
            <amazonpaymentindia>
                <use>standard</use>
                <args>
                    <module>Neev_AmazonPaymentIndia</module>
                    <frontName>amazonpaymentindia</frontName>
                </args>
            </amazonpaymentindia>
        </routers>
        <translate>
            <modules>
                <Neev_AmazonPaymentIndia>
                    <files>
                        <default>Neev_AmazonPaymentIndia.csv</default>
                    </files>
                </Neev_AmazonPaymentIndia>
            </modules>
        </translate>
        <secure_url>
            <amazonpaymentindia>/amazonpaymentindia</amazonpaymentindia>
        </secure_url>
    </frontend>
    <admin>
        <routers>
            <amazonpaymentindia>
                <use>admin</use>
                <args>
                    <module>Neev_AmazonPaymentIndia</module>
                    <frontName>amazonpaymentindia</frontName>
                </args>
            </amazonpaymentindia>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <amazonpaymentindia>
                    <file>amazonpaymentindia.xml</file>
                </amazonpaymentindia>
            </updates>
        </layout>
        <translate>
            <modules>
                <Neev_AmazonPaymentIndia>
                    <files>
                        <default>Neev_AmazonPaymentIndia.csv</default>
                    </files>
                </Neev_AmazonPaymentIndia>
            </modules>
        </translate>
    </adminhtml>
    <crontab>
        <jobs>
            <amazon_api_call>
                <schedule><cron_expr>*/5 * * * *</cron_expr></schedule>
                <run><model>amazonpaymentindia/observer::callAmazonApi</model></run>
            </amazon_api_call>
            <amazon_log_clean>
                <schedule><cron_expr>*/5 * * * *</cron_expr></schedule>
                <run><model>amazonpaymentindia/observer::cleanAmazonLog</model></run>
            </amazon_log_clean>
            <amazon_feed_batching>
                <schedule><cron_expr>*/5 * * * *</cron_expr></schedule>
                <run><model>amazonpaymentindia/observer::sendFeeds</model></run>
            </amazon_feed_batching>
        </jobs>
    </crontab>
    <default>
        <payment>
            <amazonpayments>
                <model>amazonpaymentindia/payment</model>
                <title>Amazon Payments</title>
                <payment_action>authorize</payment_action>
            </amazonpayments>
            <amazonpaymentindia>
                <group>amazonpayments</group>
                <model>amazonpaymentindia/payment_amazonPaymentIndia</model>
                <title>Checkout by Amazon</title>
                <payment_action>authorize</payment_action>
                <active>1</active>
            </amazonpaymentindia>
            <amazonpaymentindia_sandbox>
                <group>amazonpayments</group>
                <model>amazonpaymentindia/payment_amazonPaymentIndia_sandbox</model>
                <title>Checkout by Amazon (Sandbox)</title>
                <payment_action>authorize</payment_action>
                <active>1</active>
            </amazonpaymentindia_sandbox>
        </payment>
        <amazonpaymentindia>
            <signup>
                <info_active>1</info_active>
            </signup>
            <general>
                <active>0</active>
                <iopn_active>0</iopn_active>
                <marketplace>en_US</marketplace>
                <new_order_status>processing</new_order_status>
                <order_confirmation>1</order_confirmation>
                <sallowspecific>0</sallowspecific>
                <reuse_amazon_session>0</reuse_amazon_session>
                <cut_sku>40</cut_sku>
                <sandbox_mode>1</sandbox_mode>
            </general>
            <api>
                <order_update>0</order_update>
                <use_token>1</use_token>
                <report_schedule>_1_HOUR_</report_schedule>
                <feed_batching>0</feed_batching>
                <feed_schedule>_1_HOUR_</feed_schedule>
            </api>
            <design>
                <button_size>large</button_size>
                <button_color>orange</button_color>
                <button_background>white</button_background>
                <address_width>400</address_width>
                <address_height>228</address_height>
                <payment_width>400</payment_width>
                <payment_height>228</payment_height>
                <progress_width>220</progress_width>
                <progress_height>240</progress_height>
                <review_width>392</review_width>
                <review_height>306</review_height>
            </design>
            <logger>
                <active>0</active>
                <clean_after_day>7</clean_after_day>
            </logger>
        </amazonpaymentindia>
    </default>
</config>
